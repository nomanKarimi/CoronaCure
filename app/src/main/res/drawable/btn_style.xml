<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">
        <shape>
            <stroke
                android:color="#3B505E"
                android:width="2dp"/>
            <corners
                android:radius="10dp"/>


        </shape>
    </item>>
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#0381B3"/>
            <stroke
                android:color="@android:color/white"
                android:width="2dp"/>
            <corners
                android:radius="10dp"/>


        </shape>
    </item>>
</selector>